%html{lang: "en"}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %link{href: "https://fonts.googleapis.com/icon?family=Material+Icons%7CDroid+Serif%7CLato:300,400%7CEB+Garamond", rel: "stylesheet"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    {% seo %}
    {% css style %}
    {% favicon %}
  %body
    %nav.nav-center.white
      .nav-wrapper
        %ul#nav-mobile
          {% for item in site.pages %}
          {% if item.layout == 'main' %}
          %li(class="{% if item.url == page.url %}active{% endif %}")
            %a{href: '{{ item.url }}'} {{ item.title }}
          {% endif %}
          {% endfor %}
    %header
      %h1 And The Elephants
    %main
      {{ content }}
    %footer.page-footer.white
      .container
        .row
          .col.s12
            %ul.col.s4.offset-s4.left.valign-wrapper
              %li.left.col.s3
                %a{href: "https://www.facebook.com/andtheelephants"}
                  %img.responsive-img.to-black-invert(alt='Facebook Page' src='{% asset_path facebook-icon.png %}')
              %li.col.s3.left
                %a{href: "https://www.instagram.com/andtheelephants/"}
                  %img.responsive-img(alt='Instagram Page' src='{% asset_path instagram-icon.png %}')
              %li.col.s3.left
                %a{href: "https://twitter.com/AndTheElephants"}
                  %img.responsive-img.to-black-invert(alt='Twitter Page' src='{% asset_path twitter-icon.png %}')
              %li.col.s3.left
                %a{href: "https://www.youtube.com/channel/UCijafLtIiZUJXXMekl40-mw"}
                  %img.responsive-img.to-black(alt='Youtube Channel' src='{% asset_path youtube-icon.png %}')
      .footer-copyright.center-align.white.grey-text.text-lighten-1.small
        .container
