    %script{src: "https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-alpha.3/js/materialize.min.js"}
    {%- assign script_asset = '/assets/javascript/script.js?v=' %}
    %script{src: "{{ script_asset | append: site.github.build_revision | relative_url }}"}
